<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <EditText
        android:id="@+id/guess_edt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:hint="Guess the next character!"
        android:inputType="text"
        android:lines="1"
        android:maxLength="1"/>

    <TextView
        android:id="@+id/target_word_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="32dp"
        android:paddingBottom="16dp"
        android:textSize="16sp"
        android:textStyle="bold"
        tools:text="_ _ _ _  _ _ _  _ _ _ _" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Letters Guessed:"
        android:padding="8dp" />

    <TextView
        android:id="@+id/guessed_letters_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:textSize="14sp"
        android:textStyle="bold"
        tools:text="A, B, C, D" />

    <ImageView
        android:id="@+id/hangman_img"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:src="@drawable/hangman_1"
        android:scaleType="center"
        android:scaleX="1.5"
        android:scaleY="1.5" />

</LinearLayout>
